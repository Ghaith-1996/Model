<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.FavorisPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Mes livres favoris"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Favoris}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                           Padding="10"
                           HasShadow="True"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Titre}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Auteur}" />
                            <Label Text="{Binding MoyenneEvaluation,
                                                  StringFormat='Moyenne : {0:F1}/5'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
