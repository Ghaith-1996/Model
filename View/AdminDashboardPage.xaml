<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.AdminDashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Tableau de bord administrateur"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Ajouter un livre"
                Command="{Binding AllerAjoutLivreCommand}" />

        <Button Text="Supprimer un livre"
                Command="{Binding AllerSuppressionLivreCommand}" />

        <Button Text="Voir les utilisateurs"
                Command="{Binding AllerListeUtilisateursCommand}" />

    </VerticalStackLayout>
</ContentPage>
